<div class="ui container">
<h1>Events</h1>
<table class="ui very padded basic table">
  <thead>
    <tr>
      <th>Name of Event</th>
      <th>Organization</th>
      <th>Start Date</th>
      <th>End Date</th>
      <th>Gender</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @event_info.each do |event| %>
    <tr>
      <td><%= event.event_name %></td>
      <td><%= event.organization_name %></td>
      <td><%= event.start_date.to_time.strftime('%B %-d, %Y') %></td>
      <td><%= event.end_date.to_time.strftime('%B %-d, %Y') %></td>
      <td><%= event.gender %></td>
      <td><%= link_to "More Info", event.event_registration_url , class: "ui black button" %></td>
    </tr>
    <% end %>
  </tbody>
</table>
</div>
